<%= form_for(@idea) do |f| %>
<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.label :title, class: "mdl-textfield__label" %>
  <%= f.text_field :title, class: "mdl-textfield__input" %>
</div>
<br>
<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.label :body, class: "mdl-textfield__label" %>
  <%= f.text_area :body, class: "mdl-textfield__input" %>
</div>
<br>
<%= link_to "Cancel",
  root_path, class: "mdl-button mdl-js-button mdl-button--primary" %>
<%= f.button "Update", class: "mdl-button mdl-js-button mdl-button--accent" %>
<% end %>
